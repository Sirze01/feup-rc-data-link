{
    "clang-format.style": "{BasedOnStyle: LLVM, IndentWidth: 4, AllowShortBlocksOnASingleLine: Never, AllowShortCaseLabelsOnASingleLine: false, AllowShortFunctionsOnASingleLine: None, IndentCaseLabels: true}",
    "editor.formatOnSave": true,
    "editor.tabSize": 4,
    "editor.wordWrap": "bounded",
    "editor.wordWrapColumn": 150,
    "files.associations": {
        "stat.h": "c",
        "string.h": "c",
        "limits.h": "c",
        "strings.h": "c",
        "termios.h": "c",
        "features.h": "c",
        "stdbool.h": "c"
    },
    "cpplint.filters": [
        "-whitespace",
        "-legal/copyright",
        "-readability/check",
        "-build/include_subdir",
        "-build/header_guard",
        "-readability/casting",
        "-runtime/int"
    ],
    "cpplint.languages": [
        "c"
    ],
    "files.exclude": {
        "**/*.o": true
    },
    "cpplint.cpplintPath": "/usr/bin/cpplint",
}